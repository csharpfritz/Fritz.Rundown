	<style>

		#content {
			display: flex;
			align-items: stretch;
			justify-content: flex-start;
			flex-direction: column;
		}

		fieldset {
			margin: 5px 0;
		}

		iframe {
			height: 80px;
			overflow-x: hidden;
		}

		input, label {
			width: 10em;
			display: inline-block;
		}
